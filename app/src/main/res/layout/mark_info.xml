<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp">


    <ImageView
        android:id="@+id/mark_img"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/pic" />

    <TextView
        android:id="@+id/mark_name"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mark_img"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/mark_img"
        android:text="浙江大学城市学院" />

    <TextView
        android:id="@+id/textView15"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mark_name"
        android:layout_centerVertical="true"
        android:text="类型：" />

    <TextView
        android:id="@+id/mark_sitetype"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView15"
        android:layout_toEndOf="@+id/textView15"
        android:text="河流" />

    <TextView
        android:id="@+id/textView17"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mark_img"
        android:layout_alignStart="@+id/textView15"
        android:text="在钓人数：" />

    <TextView
        android:id="@+id/mark_countpeople"
        android:layout_width="wrap_content"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView17"
        android:layout_toEndOf="@+id/textView17"
        android:text="0" />

    <TextView
        android:id="@+id/mark_distance"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:text="100m" />
</RelativeLayout>