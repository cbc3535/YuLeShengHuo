<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/fishsite_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/fishsite" />

        <TextView
            android:id="@+id/fishsite_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fishsite_pic"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/fishsite_pic"
            android:text="浙江大学城市学院" />

        <TextView
            android:id="@+id/fishsite_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fishsite_name"
            android:layout_below="@+id/fishsite_name"
            android:layout_marginTop="19dp"
            android:text="浙江大学城市学院内河" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/fishsite_name"
            android:layout_marginEnd="24dp"
            android:text="100m" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9f9f9f"
            android:layout_below="@+id/fishsite_address"/>

    </RelativeLayout>
</RelativeLayout>